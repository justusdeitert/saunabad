{
	"useTabs": true,
	"tabWidth": 4,
	"semi": true,
	"singleQuote": true,
	"printWidth": 120,
	"trailingComma": "es5",
	"bracketSpacing": true,
	"bracketSameLine": false,
	"arrowParens": "always",
	"endOfLine": "lf",
	"quoteProps": "as-needed",
	"htmlWhitespaceSensitivity": "css",
	"overrides": [
		{
			"files": "*.liquid",
			"options": {
				"parser": "html"
			}
		},
		{
			"files": ["*.scss", "*.css"],
			"options": {
				"singleQuote": false
			}
		}
	]
}