<!DOCTYPE html>
<html lang="de" class="antialiased">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Title & Description -->
    <title>{{ title }}</title>
    <meta name="description" content="{{ meta.description }}">
    <meta name="robots" content="index, follow">
    <link rel="canonical" href="{{ meta.url }}{{ page.url }}">

    <!-- OpenGraph Tags -->
    <meta property="og:title" content="{{ meta.og.title }}" />
    <meta property="og:description" content="{{ meta.og.description }}" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="{{ meta.url }}{{ page.url }}" />
    <meta property="og:image" content="{{ meta.url }}{{ meta.og.image }}" />
    <meta property="og:locale" content="{{ meta.og.locale }}" />
    <meta property="og:site_name" content="Saunabad Berlin" />

    <!-- Twitter tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="{{ meta.og.title }}" />
    <meta name="twitter:description" content="{{ meta.og.description }}" />
    <meta name="twitter:image" content="{{ meta.url }}{{ meta.og.image }}" />

    <!-- Schema.org LocalBusiness structured data -->
    <script type="application/ld+json">
    {
        "@context": "https://schema.org",
        "@type": "HealthAndBeautyBusiness",
        "name": "Saunabad Berlin",
        "description": "{{ meta.description }}",
        "url": "{{ meta.url }}",
        "telephone": "+49 30 44046397",
        "email": "info@saunabad-berlin.de",
        "image": "{{ meta.url }}{{ meta.og.image }}",
        "address": {
            "@type": "PostalAddress",
            "streetAddress": "Rykestraße 10",
            "addressLocality": "Berlin",
            "addressRegion": "Berlin",
            "postalCode": "10405",
            "addressCountry": "DE"
        },
        "geo": {
            "@type": "GeoCoordinates",
            "latitude": 52.5347,
            "longitude": 13.4267
        },
        "openingHoursSpecification": [
            {
                "@type": "OpeningHoursSpecification",
                "dayOfWeek": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday"],
                "opens": "15:00",
                "closes": "24:00"
            },
            {
                "@type": "OpeningHoursSpecification",
                "dayOfWeek": "Sunday",
                "opens": "12:00",
                "closes": "24:00"
            }
        ],
        "priceRange": "€€",
        "currenciesAccepted": "EUR",
        "paymentAccepted": "Cash, Credit Card",
        "sameAs": [
            "https://www.instagram.com/saunabad_berlin/",
            "https://www.facebook.com/Saunabad-Berlin-Prenzlauer-Berg-176322405726284/"
        ]
    }
    </script>

    <!-- Favicon - Google requires min 48x48px, multiples of 48 work best -->
    <link rel="icon" href="/favicon.ico" sizes="48x48">
    <link rel="icon" href="/favicon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/apple-touch-icon.png">
    <link rel="manifest" href="/site.webmanifest">

    <!-- Styles -->
    <link as="style" href="/styles/main.css?ver={% hash %}" rel="stylesheet preload" />

    <!-- https://fonts.google.com/share?selection.family=Limelight%7CMukta:wght@300;400%7CRosario:ital,wght@0,700;1,700 -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Limelight&family=Mukta:wght@300;400&family=Rosario:ital,wght@0,700;1,700&display=swap"
        rel="stylesheet">
</head>

<body>
    <div data-router-wrapper>
        <div data-router-view>
            <main>
                {{ content }}
            </main>
        </div>
    </div>

    <!-- Scripts -->
    <script defer src="/scripts/main.js?ver={% hash %}"></script>
</body>

</html>