<section id="gallery" class="overflow-hidden bg-charcoal relative">
    <!-- Background pattern -->
    <div class="absolute inset-0 opacity-5">
        <div class="absolute inset-0" style="background-image: radial-gradient(circle at 2px 2px, currentColor 1px, transparent 0); background-size: 40px 40px;"></div>
    </div>

    <div class="px-8 sm:px-16 md:px-[4vw] py-20 md:py-[8vw] relative z-10">
        <!-- Section header -->
        <div class="text-center mb-12 md:mb-16">
            <span class="text-copper tracking-[0.3em] uppercase text-sm mb-4 block">Impressionen</span>
            <h2 class="text-cream font-display text-5xl md:text-7xl tracking-wide">Unsere RÃ¤ume</h2>
            <div class="w-16 h-[2px] bg-copper mx-auto mt-6"></div>
        </div>

        <div class="swiper !overflow-visible cursor-grab">
            <div class="flex swiper-wrapper">
                {% for slide in gallery %}
                    <div class="swiper-slide flex flex-col bg-cream mr-[30px] lg:mr-[60px] p-4 md:p-6 rounded-xl shadow-2xl group">
                        <div class="relative -mt-10 md:-mt-12 mb-4">
                            <span class="inline-block bg-copper text-cream px-4 py-2 rounded-full text-sm font-medium tracking-wide uppercase">
                                {{ slide.title }}
                            </span>
                        </div>
                        <div class="relative image-wrapper rounded-lg overflow-hidden">
                            {% image slide.image, slide.title, "(min-width: 30em) 50vw, 100vw", "object-cover w-full h-full absolute transition-transform duration-500 group-hover:scale-105" %}
                        </div>
   
                        <p class="text-center pt-6 my-auto mx-auto text-charcoal/80 xl:max-w-[85%] leading-relaxed">{{ slide.description }}</p>
                    </div>
                {%- endfor %}
            </div>
        </div>

        <!-- Navigation arrows -->
        <div class="flex items-center justify-center gap-4 mt-10">
            <button class="prev-arrow swiper-button-prev w-12 h-12 md:w-14 md:h-14 rounded-full border-2 border-copper/40 flex items-center justify-center text-copper hover:bg-copper hover:text-cream transition-all">
                {% include 'icons/icon-arrow-left' classnames: 'w-5 md:w-6 stroke-current' %}
            </button>
            <button class="next-arrow swiper-button-next w-12 h-12 md:w-14 md:h-14 rounded-full border-2 border-copper/40 flex items-center justify-center text-copper hover:bg-copper hover:text-cream transition-all">
                {% include 'icons/icon-arrow-right' classnames: 'w-5 md:w-6 stroke-current' %}
            </button>
        </div>
    </div>
</section>